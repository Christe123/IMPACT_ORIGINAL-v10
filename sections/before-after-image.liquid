<style>
.ba-section {
  width: 100%;
  padding: 40px 20px;
  background: white;
}

.ba-content {
  max-width: 1400px;
  margin: 0 auto;
  border: 2px solid #4A90E2;
  border-radius: 12px;
  padding: 40px;
  background: #fafafa;
  position: relative;
}

.ba-badge {
  display: inline-block;
  background: #4A90E2;
  color: white;
  padding: 8px 20px;
  border-radius: 8px 8px 0 0;
  font-size: 0.9rem;
  font-weight: 500;
  position: absolute;
  top: -30px;
  left: 0;
}

.ba-title {
  font-size: 3rem;
  font-weight: bold;
  margin-bottom: 20px;
  color: black;
  line-height: 1.2;
}

.ba-desc {
  color: #333;
  font-size: 1.2rem;
  margin-bottom: 40px;
  line-height: 1.6;
}

.ba-wrapper {
  position: relative;
  width: 100%;
  aspect-ratio: 2.5 / 1;
  overflow: hidden;
  border-radius: 12px;
  cursor: ew-resize;
  user-select: none;
  background: #e0e0e0;
  box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.ba-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  pointer-events: none;
}

.ba-after-wrap {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.ba-before-wrap {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 2;
  clip-path: inset(0 50% 0 0);
}

.ba-line {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 50%;
  width: 3px;
  background: white;
  z-index: 3;
  pointer-events: none;
  box-shadow: 0 0 10px rgba(0,0,0,0.3);
}

.ba-handle {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80px;
  height: 80px;
  background: white;
  border-radius: 50%;
  box-shadow: 0 4px 20px rgba(0,0,0,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: grab;
  pointer-events: auto;
  border: 3px solid #f0f0f0;
}

.ba-handle:active {
  cursor: grabbing;
}

.ba-icon {
  display: flex;
  gap: 3px;
}

.ba-icon span {
  width: 3px;
  height: 32px;
  background: #333;
  border-radius: 2px;
}

.ba-label {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  color: white;
  font-size: 4rem;
  font-weight: bold;
  z-index: 4;
  text-shadow: 2px 2px 8px rgba(0,0,0,0.3);
  pointer-events: none;
}

.ba-label-before {
  left: 15%;
}

.ba-label-after {
  right: 15%;
}

@media (max-width: 1024px) {
  .ba-wrapper {
    aspect-ratio: 16 / 9;
  }
  .ba-label {
    font-size: 3rem;
  }
}

@media (max-width: 768px) {
  .ba-content {
    padding: 20px;
  }
  .ba-badge {
    font-size: 0.8rem;
    padding: 6px 15px;
    top: -24px;
  }
  .ba-title {
    font-size: 2rem;
  }
  .ba-desc {
    font-size: 1rem;
    margin-bottom: 30px;
  }
  .ba-wrapper {
    aspect-ratio: 1;
  }
  .ba-handle {
    width: 60px;
    height: 60px;
  }
  .ba-icon span {
    width: 2px;
    height: 24px;
  }
  .ba-label {
    font-size: 2rem;
  }
  .ba-label-before {
    left: 10%;
  }
  .ba-label-after {
    right: 10%;
  }
}
</style>

<div class="ba-section">
  <div class="ba-content">
    <div class="ba-badge">Before/after image</div>
    <h2 class="ba-title">Before/after</h2>
    <p class="ba-desc">Showcase your product benefit by using before/after image comparison.</p>
    <div class="ba-wrapper" id="baSlider">
      <div class="ba-after-wrap">
        <img src="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?w=1600&q=80" alt="After" class="ba-img">
        <div class="ba-label ba-label-after">After</div>
      </div>
      <div class="ba-before-wrap" id="baBeforeWrap">
        <img src="https://images.unsplash.com/photo-1491637639811-60e2756cc1c7?w=1600&q=80" alt="Before" class="ba-img">
        <div class="ba-label ba-label-before">Before</div>
      </div>
      <div class="ba-line" id="baLine">
        <div class="ba-handle">
          <div class="ba-icon">
            <span></span>
            <span></span>
            <span></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
(function() {
  var slider = document.getElementById('baSlider');
  var beforeWrap = document.getElementById('baBeforeWrap');
  var line = document.getElementById('baLine');
  
  if (!slider || !beforeWrap || !line) return;
  
  var isDragging = false;

  function updatePosition(clientX) {
    var rect = slider.getBoundingClientRect();
    var x = clientX - rect.left;
    var percentage = Math.max(0, Math.min(100, (x / rect.width) * 100));
    var clipValue = 100 - percentage;
    
    beforeWrap.style.clipPath = 'inset(0 ' + clipValue + '% 0 0)';
    line.style.left = percentage + '%';
  }

  slider.addEventListener('mousedown', function() {
    isDragging = true;
  });

  document.addEventListener('mouseup', function() {
    isDragging = false;
  });

  document.addEventListener('mousemove', function(e) {
    if (isDragging) {
      updatePosition(e.clientX);
    }
  });

  slider.addEventListener('touchstart', function() {
    isDragging = true;
  });

  slider.addEventListener('touchend', function() {
    isDragging = false;
  });

  slider.addEventListener('touchmove', function(e) {
    if (e.touches && e.touches.length > 0) {
      updatePosition(e.touches[0].clientX);
    }
  });

  window.addEventListener('load', function() {
    setTimeout(function() {
      var rect = slider.getBoundingClientRect();
      updatePosition(rect.left + (rect.width / 2));
    }, 200);
  });
})();
</script>

