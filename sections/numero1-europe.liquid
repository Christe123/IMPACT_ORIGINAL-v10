<div class="numero1-section">
  <div class="numero1-container">
    
    <div class="numero1-content">
      <div class="numero1-badge">
        <div class="badge-circle">
          <div class="number">{{ section.settings.badge_number }}</div>
          <div class="ribbons">
            <div class="ribbon ribbon-left"></div>
            <div class="ribbon ribbon-right"></div>
          </div>
        </div>
      </div>
      
      <div class="numero1-text">
        <h2 class="main-title">{{ section.settings.main_title }}</h2>
        <div class="description">
          <p class="highlight">{{ section.settings.highlight_text }}</p>
          <p class="stats">
            <strong>{{ section.settings.percentage }}</strong> {{ section.settings.stats_text1 }} 
            <strong>{{ section.settings.time_result }}</strong> {{ section.settings.stats_text2 }}
          </p>
          <p class="study-info">{{ section.settings.study_info }}</p>
        </div>
      </div>
    </div>
    
  </div>
</div>

<style>
.numero1-section {
  background: {{ section.settings.background_color }};
  padding: {{ section.settings.section_padding }}px 20px;
  border-radius: {{ section.settings.section_radius }}px;
  margin: {{ section.settings.section_margin }}px 0;
  box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.numero1-container {
  max-width: {{ section.settings.max_width }}px;
  margin: 0 auto;
}

.numero1-content {
  display: flex;
  align-items: center;
  gap: {{ section.settings.content_gap }}px;
  justify-content: flex-start;
}

.numero1-badge {
  flex-shrink: 0;
}

.badge-circle {
  width: {{ section.settings.badge_size }}px;
  height: {{ section.settings.badge_size }}px;
  border-radius: 50%;
  background: {{ section.settings.badge_bg_color }};
  border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 6px 20px rgba(0,0,0,0.15);
}

.number {
  font-size: {{ section.settings.number_size }}px;
  font-weight: {{ section.settings.number_weight }};
  color: {{ section.settings.number_color }};
}

.ribbons {
  position: absolute;
  bottom: -8px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 2px;
}

.ribbon {
  width: 20px;
  height: 25px;
  background: {{ section.settings.ribbon_color }};
  position: relative;
}

.ribbon::after {
  content: '';
  position: absolute;
  bottom: -8px;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-top: 8px solid {{ section.settings.ribbon_color }};
}

.ribbon-left {
  border-radius: 3px 0 0 3px;
}

.ribbon-right {
  border-radius: 0 3px 3px 0;
}

.numero1-text {
  flex: 1;
  color: {{ section.settings.text_color }};
}

.main-title {
  font-size: {{ section.settings.title_size }}px;
  font-weight: {{ section.settings.title_weight }};
  color: {{ section.settings.title_color }};
  margin-bottom: {{ section.settings.title_margin }}px;
  line-height: 1.3;
}

.highlight {
  font-size: {{ section.settings.highlight_size }}px;
  margin-bottom: {{ section.settings.paragraph_spacing }}px;
  color: {{ section.settings.highlight_color }};
  line-height: 1.5;
}

.stats {
  font-size: {{ section.settings.stats_size }}px;
  margin-bottom: {{ section.settings.paragraph_spacing }}px;
  color: {{ section.settings.stats_color }};
  line-height: 1.6;
}

.stats strong {
  color: {{ section.settings.stats_bold_color }};
  font-weight: {{ section.settings.stats_bold_weight }};
}

.study-info {
  font-size: {{ section.settings.study_size }}px;
  color: {{ section.settings.study_color }};
  font-style: italic;
  line-height: 1.5;
  margin-bottom: 0;
}

/* Mobile responsive */
@media (max-width: 768px) {
  .numero1-section {
    padding: {{ section.settings.mobile_padding }}px 15px;
    border-radius: {{ section.settings.mobile_radius }}px;
  }
  
  .numero1-content {
    flex-direction: column;
    gap: {{ section.settings.mobile_gap }}px;
    text-align: center;
  }
  
  .badge-circle {
    width: {{ section.settings.mobile_badge_size }}px;
    height: {{ section.settings.mobile_badge_size }}px;
  }
  
  .number {
    font-size: {{ section.settings.mobile_number_size }}px;
  }
  
  .main-title {
    font-size: {{ section.settings.mobile_title_size }}px;
  }
  
  .highlight {
    font-size: {{ section.settings.mobile_highlight_size }}px;
  }
  
  .stats {
    font-size: {{ section.settings.mobile_stats_size }}px;
  }
  
  .study-info {
    font-size: {{ section.settings.mobile_study_size }}px;
  }
}

/* Animation */
@keyframes bounceInLeft {
  0% {
    opacity: 0;
    transform: translateX(-50px) scale(0.8);
  }
  60% {
    opacity: 1;
    transform: translateX(10px) scale(1.05);
  }
  100% {
    opacity: 1;
    transform: translateX(0) scale(1);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.badge-circle {
  animation: bounceInLeft 0.8s ease-out;
}

.numero1-text {
  animation: slideInRight 0.8s ease-out 0.3s both;
}

.ribbons {
  animation: bounceInLeft 0.8s ease-out 0.5s both;
}
</style>

