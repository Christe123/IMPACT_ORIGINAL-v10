<div class="professional-badge-section">
  <div class="professional-container">
    
    <div class="professional-content">
      <div class="professional-badge">
        <div class="badge-wrapper">
          <div class="badge-number">{{ section.settings.badge_number }}</div>
          <div class="badge-crown">
            <svg width="24" height="20" viewBox="0 0 24 20" fill="currentColor">
              <path d="M5 16L3 3l5.5 7L12 4l3.5 6L21 3l-2 13H5z"/>
            </svg>
          </div>
        </div>
      </div>
      
      <div class="professional-text">
        <h2 class="professional-title">{{ section.settings.main_title }}</h2>
        <div class="professional-description">
          <p class="highlight-text">{{ section.settings.highlight_text }}</p>
          <div class="stats-block">
            <span class="stats-percentage">{{ section.settings.percentage }}</span>
            <span class="stats-description">{{ section.settings.stats_description }}</span>
            <span class="stats-time">{{ section.settings.time_result }}</span>
          </div>
          <p class="study-reference">{{ section.settings.study_info }}</p>
        </div>
      </div>
    </div>
    
  </div>
</div>

<style>
.professional-badge-section {
  background: {{ section.settings.background_color }};
  padding: {{ section.settings.section_padding }}px 20px;
  border: 1px solid {{ section.settings.border_color }};
  border-radius: {{ section.settings.section_radius }}px;
  margin: {{ section.settings.section_margin }}px 0;
}

.professional-container {
  max-width: {{ section.settings.max_width }}px;
  margin: 0 auto;
}

.professional-content {
  display: flex;
  align-items: flex-start;
  gap: {{ section.settings.content_gap }}px;
}

.professional-badge {
  flex-shrink: 0;
}

.badge-wrapper {
  width: {{ section.settings.badge_size }}px;
  height: {{ section.settings.badge_size }}px;
  border-radius: 50%;
  background: {{ section.settings.badge_bg_color }};
  border: {{ section.settings.border_width }}px solid {{ section.settings.badge_border_color }};
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 4px 16px rgba(0,0,0,0.1);
}

.badge-number {
  font-size: {{ section.settings.number_size }}px;
  font-weight: {{ section.settings.number_weight }};
  color: {{ section.settings.number_color }};
  line-height: 1;
}

.badge-crown {
  color: {{ section.settings.crown_color }};
  margin-top: 4px;
  opacity: 0.8;
}

.professional-text {
  flex: 1;
}

.professional-title {
  font-size: {{ section.settings.title_size }}px;
  font-weight: {{ section.settings.title_weight }};
  color: {{ section.settings.title_color }};
  margin-bottom: {{ section.settings.title_margin }}px;
  line-height: 1.3;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif;
}

.professional-description {
  color: {{ section.settings.text_color }};
}

.highlight-text {
  font-size: {{ section.settings.highlight_size }}px;
  margin-bottom: {{ section.settings.paragraph_spacing }}px;
  line-height: 1.5;
  color: {{ section.settings.highlight_color }};
}

.stats-block {
  background: {{ section.settings.stats_bg_color }};
  padding: {{ section.settings.stats_padding }}px;
  border-radius: {{ section.settings.stats_radius }}px;
  border-left: 4px solid {{ section.settings.accent_color }};
  margin-bottom: {{ section.settings.paragraph_spacing }}px;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 8px;
}

.stats-percentage {
  font-size: {{ section.settings.stats_size }}px;
  font-weight: {{ section.settings.stats_weight }};
  color: {{ section.settings.accent_color }};
}

.stats-description {
  font-size: {{ section.settings.stats_size }}px;
  color: {{ section.settings.stats_color }};
}

.stats-time {
  font-size: {{ section.settings.stats_size }}px;
  font-weight: {{ section.settings.stats_weight }};
  color: {{ section.settings.accent_color }};
  background: {{ section.settings.time_bg_color }};
  padding: 4px 12px;
  border-radius: 20px;
  white-space: nowrap;
}

.study-reference {
  font-size: {{ section.settings.study_size }}px;
  color: {{ section.settings.study_color }};
  font-style: italic;
  line-height: 1.4;
  margin: 0;
}

/* Mobile responsive */
@media (max-width: 768px) {
  .professional-badge-section {
    padding: {{ section.settings.mobile_padding }}px 15px;
  }
  
  .professional-content {
    flex-direction: column;
    gap: {{ section.settings.mobile_gap }}px;
    text-align: center;
  }
  
  .badge-wrapper {
    width: {{ section.settings.mobile_badge_size }}px;
    height: {{ section.settings.mobile_badge_size }}px;
    margin: 0 auto;
  }
  
  .badge-number {
    font-size: {{ section.settings.mobile_number_size }}px;
  }
  
  .professional-title {
    font-size: {{ section.settings.mobile_title_size }}px;
  }
  
  .highlight-text {
    font-size: {{ section.settings.mobile_highlight_size }}px;
  }
  
  .stats-percentage,
  .stats-description,
  .stats-time {
    font-size: {{ section.settings.mobile_stats_size }}px;
  }
  
  .study-reference {
    font-size: {{ section.settings.mobile_study_size }}px;
  }
}

/* Subtle animation */
@keyframes fadeInScale {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.professional-badge-section {
  animation: fadeInScale 0.6s ease-out;
}
</style>

