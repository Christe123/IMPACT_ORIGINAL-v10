<div class="trustpilot-simple">
  <div class="trustpilot-wrapper">
    
    {% if section.settings.title != blank %}
    <h2 class="trustpilot-title">{{ section.settings.title }}</h2>
    {% endif %}
    
    <div class="trustpilot-rating">
      <span class="excellent">{{ section.settings.excellent_text }}</span>
      <span class="rating">{{ section.settings.rating }} / 5</span>
      
      <div class="stars">
        <span class="star">‚òÖ</span>
        <span class="star">‚òÖ</span>
        <span class="star">‚òÖ</span>
        <span class="star">‚òÖ</span>
        <span class="star">‚òÖ</span>
      </div>
    </div>
    
    <div class="trustpilot-info">
      {{ section.settings.review_prefix }}<strong>{{ section.settings.review_count }}</strong>{{ section.settings.review_suffix }}
      <span class="trustpilot-brand">‚≠ê {{ section.settings.brand_text }}</span>
    </div>
    
  </div>
</div>

<style>
.trustpilot-simple {
  background: {{ section.settings.background_color }};
  padding: {{ section.settings.spacing }}px 20px;
  text-align: center;
}

.trustpilot-wrapper {
  max-width: 1000px;
  margin: 0 auto;
}

.trustpilot-title {
  font-size: {{ section.settings.title_size }}px;
  color: {{ section.settings.title_color }};
  margin-bottom: 20px;
  font-weight: 600;
}

.trustpilot-rating {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15px;
  flex-wrap: wrap;
  margin-bottom: 15px;
}

.excellent {
  font-size: 18px;
  color: {{ section.settings.text_color }};
  font-weight: 500;
}

.rating {
  font-size: 22px;
  color: {{ section.settings.rating_color }};
  font-weight: 700;
}

.stars {
  display: flex;
  gap: 3px;
}

.star {
  width: {{ section.settings.star_size }}px;
  height: {{ section.settings.star_size }}px;
  background: {{ section.settings.star_color }};
  color: white;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  font-weight: bold;
}

.trustpilot-info {
  font-size: 16px;
  color: {{ section.settings.info_color }};
}

.trustpilot-info strong {
  color: {{ section.settings.count_color }};
  text-decoration: underline;
}

.trustpilot-brand {
  margin-left: 10px;
  color: {{ section.settings.brand_color }};
  font-weight: 600;
}

@media (max-width: 768px) {
  .trustpilot-rating {
    flex-direction: column;
    gap: 10px;
  }
  
  .trustpilot-title {
    font-size: {{ section.settings.title_size | minus: 6 }}px;
  }
  
  .star {
    width: {{ section.settings.star_size | minus: 4 }}px;
    height: {{ section.settings.star_size | minus: 4 }}px;
  }
}
</style>

