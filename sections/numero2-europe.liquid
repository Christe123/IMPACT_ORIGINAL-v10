<div class="exact-design-section">
  <div class="exact-container">
    
    <div class="exact-content">
      <div class="exact-badge">
        <div class="medal-badge">
          <div class="medal-circle">
            <span class="medal-number">{{ section.settings.badge_number }}</span>
          </div>
          <div class="medal-ribbons">
            <div class="ribbon-left"></div>
            <div class="ribbon-right"></div>
          </div>
        </div>
      </div>
      
      <div class="exact-text">
        <h2 class="exact-title">{{ section.settings.main_title }}</h2>
        <p class="exact-description">{{ section.settings.description_text }}</p>
        <p class="exact-stats">
          <strong>{{ section.settings.percentage }}</strong> {{ section.settings.stats_text }} <strong>{{ section.settings.time_result }}</strong> {{ section.settings.study_note }}
        </p>
      </div>
    </div>
    
  </div>
</div>

<style>
.exact-design-section {
  background: {{ section.settings.background_color }};
  padding: {{ section.settings.section_padding }}px 20px;
  border-radius: {{ section.settings.border_radius }}px;
  margin: {{ section.settings.section_margin }}px 0;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.exact-container {
  max-width: {{ section.settings.max_width }}px;
  margin: 0 auto;
}

.exact-content {
  display: flex;
  align-items: flex-start;
  gap: {{ section.settings.content_gap }}px;
}

.exact-badge {
  flex-shrink: 0;
  padding-top: 10px;
}

.medal-badge {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.medal-circle {
  width: {{ section.settings.medal_size }}px;
  height: {{ section.settings.medal_size }}px;
  border-radius: 50%;
  background: {{ section.settings.medal_bg_color }};
  border: {{ section.settings.medal_border }}px solid {{ section.settings.medal_border_color }};
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 2;
}

.medal-number {
  font-size: {{ section.settings.number_size }}px;
  font-weight: {{ section.settings.number_weight }};
  color: {{ section.settings.number_color }};
  line-height: 1;
}

.medal-ribbons {
  position: relative;
  top: -5px;
  display: flex;
  gap: 2px;
}

.ribbon-left,
.ribbon-right {
  width: {{ section.settings.ribbon_width }}px;
  height: {{ section.settings.ribbon_height }}px;
  background: {{ section.settings.ribbon_color }};
  position: relative;
}

.ribbon-left::after,
.ribbon-right::after {
  content: '';
  position: absolute;
  bottom: -8px;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: {{ section.settings.ribbon_width | divided_by: 2 }}px solid transparent;
  border-right: {{ section.settings.ribbon_width | divided_by: 2 }}px solid transparent;
  border-top: 8px solid {{ section.settings.ribbon_color }};
}

.exact-text {
  flex: 1;
}

.exact-title {
  font-size: {{ section.settings.title_size }}px;
  font-weight: {{ section.settings.title_weight }};
  color: {{ section.settings.title_color }};
  margin: 0 0 {{ section.settings.title_margin }}px 0;
  line-height: 1.3;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif;
}

.exact-description {
  font-size: {{ section.settings.description_size }}px;
  color: {{ section.settings.description_color }};
  margin: 0 0 {{ section.settings.paragraph_spacing }}px 0;
  line-height: 1.5;
}

.exact-stats {
  font-size: {{ section.settings.stats_size }}px;
  color: {{ section.settings.stats_color }};
  margin: 0;
  line-height: 1.6;
}

.exact-stats strong {
  color: {{ section.settings.stats_bold_color }};
  font-weight: {{ section.settings.stats_bold_weight }};
}

/* Mobile responsive */
@media (max-width: 768px) {
  .exact-design-section {
    padding: {{ section.settings.mobile_padding }}px 15px;
  }
  
  .exact-content {
    flex-direction: column;
    gap: {{ section.settings.mobile_gap }}px;
    text-align: center;
  }
  
  .medal-circle {
    width: {{ section.settings.mobile_medal_size }}px;
    height: {{ section.settings.mobile_medal_size }}px;
  }
  
  .medal-number {
    font-size: {{ section.settings.mobile_number_size }}px;
  }
  
  .ribbon-left,
  .ribbon-right {
    width: {{ section.settings.mobile_ribbon_width }}px;
    height: {{ section.settings.mobile_ribbon_height }}px;
  }
  
  .ribbon-left::after,
  .ribbon-right::after {
    border-left-width: {{ section.settings.mobile_ribbon_width | divided_by: 2 }}px;
    border-right-width: {{ section.settings.mobile_ribbon_width | divided_by: 2 }}px;
  }
  
  .exact-title {
    font-size: {{ section.settings.mobile_title_size }}px;
  }
  
  .exact-description {
    font-size: {{ section.settings.mobile_description_size }}px;
  }
  
  .exact-stats {
    font-size: {{ section.settings.mobile_stats_size }}px;
  }
}

/* Simple animation */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.exact-design-section {
  animation: slideUp 0.6s ease-out;
}
</style>

