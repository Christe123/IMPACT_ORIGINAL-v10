  "name": "Temoignages",
  "class": "testimonials-section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Ce que disent nos clientes"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Sous-titre",
      "default": "Des resultats visibles et une confiance retrouvee"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Temoignage",
      "settings": [
        {
          "type": "image_picker",
