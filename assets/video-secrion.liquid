    </div>

    <script>
        // Simulation d'interaction avec les vidÃ©os
        document.querySelectorAll('.video-card').forEach(card => {
            card.addEventListener('click', function() {
                // Animation au clic
                this.style.transform = 'scale(0.98)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 200);
            });
        });
